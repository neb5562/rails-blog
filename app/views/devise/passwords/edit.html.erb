<div class="mt-10 m-auto w-full max-w-lg content-center">
  <h2>Change your password</h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "dark:text-slate-300 dark:bg-gray-800 bg-white shadow-md rounded-lg px-8 pt-6 pb-8 mb-4" }) do |f| %>
    <p><%= render "devise/shared/error_messages", resource: resource %></p>
    <%= f.hidden_field :reset_password_token %>
    <div class="mb-4">
      <%= f.label :password, "New password", class: 'block text-gray-700 text-sm font-bold mb-2' %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "dark:bg-gray-600 dark:text-slate-300 dark:placeholder-white dark:border-gray-800 shadow appearance-none border rounded-lg w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    <div class="mb-4">
      <%= f.label :password_confirmation, "Confirm new password", class: 'block text-gray-700 text-sm font-bold mb-2'%><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "dark:bg-gray-600 dark:text-slate-300 dark:placeholder-white dark:border-gray-800 shadow appearance-none border rounded-lg w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    <div class="flex items-baseline justify-between">
      <%= f.submit "Change my password", class: 'bg-blue-500 hover:bg-blue-700 text-slate-200 font-bold py-2 px-4 rounded-lg focus:outline-none focus:shadow-outline' %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
