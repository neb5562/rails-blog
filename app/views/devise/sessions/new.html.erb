<div class="mt-10 m-auto w-full max-w-lg content-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: "login-form", class: "dark:text-slate-300 dark:bg-zinc-800 bg-white shadow-md rounded-lg px-8 pt-6 pb-8 mb-4"}) do |f| %>
    <div class="mb-4">
      <%= f.label t(:email), class: 'block text-gray-700 text-sm font-bold mb-2'%><br />
      <%= f.email_field :email, :required => true, autofocus: true, autocomplete: "email", class: 'dark:bg-zinc-700 dark:text-slate-300 dark:placeholder-white dark:border-gray-800 shadow appearance-none border rounded-lg w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'%>
    </div>
    <div class="mb-4">
      <%= f.label t(:password), class: 'block text-gray-700 text-sm font-bold mb-2' %><br />
      <%= f.password_field :password,:required => true, autocomplete: "current-password", class: 'dark:bg-zinc-700 dark:text-slate-300 dark:placeholder-white dark:border-gray-800 shadow appearance-none border  rounded-lg w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline' %>
    </div>
    <div class="flex items-baseline justify-between">
      <%= f.submit t("sign_in"), class: 'bg-blue-500 hover:bg-blue-700 text-slate-200 font-bold py-2 px-4 rounded-lg focus:outline-none focus:shadow-outline' %>
      <%= link_to t('forgot_password?'), new_password_path('user'), html: {class: 'inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800'}%>
    </div>
  <% end %>
  <%=render partial: 'layouts/socials'%>
</div>
<div class="my-10 m-auto w-full max-w-xs text-center">
  <%= link_to t('sign_up'), new_user_registration_path, html: {class: 'inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800'}%>
</div>
