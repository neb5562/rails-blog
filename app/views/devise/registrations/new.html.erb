<div class="mt-10 m-auto w-full max-w-lg content-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "dark:text-slate-200 dark:bg-gray-800 bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" }) do |f| %>
    <%= devise_error_messages! %>
    <% flash.each do |key, value| %>
      <div class="flash <%= key %> text-red-500"><%= value %></div>
    <% end %>
    <div class="mb-4">
      <%= f.label t(:email), class: 'block text-gray-700 text-sm font-bold'%><br />
      <%= f.email_field :email, :required => true, autofocus: true, autocomplete: "email", class: 'dark:bg-gray-600 dark:text-slate-200 dark:placeholder-white dark:border-gray-800 shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    </div>
    <div class="mb-4">
      <%= f.label t(:username), class: 'block text-gray-700 text-sm font-bold'%><br />
      <%= f.text_field :username, :required => true, autofocus: true, autocomplete: "email", class: 'dark:bg-gray-600 dark:text-slate-200 dark:placeholder-white dark:border-gray-800 shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    </div>
    <div class="mb-4">
      <%= f.label t(:full_name), class: 'block text-gray-700 text-sm font-bold'%><br />
      <%= f.text_field :full_name, :required => true, autofocus: true, autocomplete: "email", class: 'dark:bg-gray-600 dark:text-slate-200 dark:placeholder-white dark:border-gray-800 shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    </div>
    <div class="mb-4">
      <%= f.label t(:password), class: 'block text-gray-700 text-sm font-bold' %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> <%=t('characters_minimum')%>)</em>
      <% end %><br />
      <%= f.password_field :password, :required => true, autocomplete: "current-password", class: 'dark:bg-gray-600 dark:text-slate-200 dark:placeholder-white dark:border-gray-800 shadow appearance-none border  rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline' %>
    </div>
    <div class="mb-4">
      <%= f.label t(:password_confirmation), class: 'block text-gray-700 text-sm font-bold' %><br />
      <%= f.password_field :password_confirmation, :required => true, autocomplete: "current-password", class: 'dark:bg-gray-600 dark:text-slate-200 dark:placeholder-white dark:border-gray-800 shadow appearance-none border  rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline' %>
    </div>
    <div class="flex items-baseline justify-between">
      <%= f.submit t("sign_up"), class: 'bg-blue-500 hover:bg-blue-700 text-slate-200 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
      <%= link_to t('forgot_password?'), new_password_path('user'), html: {class: 'inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800'}%>
    </div>
  <% end %>
  <%=render partial: 'layouts/socials'%>
</div>
<div class="my-10 m-auto w-full max-w-xs text-center">
  <%= link_to t('sign_in'), new_user_session_path, html: {class: 'inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800'}%>
</div>
