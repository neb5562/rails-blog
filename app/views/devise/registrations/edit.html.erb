<% content_for(:html_title) { t("edit_profile") } %>
<%=render "layouts/users_sidebar" %>
<div class="mt-10 float-left w-full max-w-lg content-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" }) do |f| %>
    <%= devise_error_messages! %>
    <% flash.each do |key, value| %>
      <div class="flash <%= key %> text-red-700"><%= value %></div>
    <% end %>
    <div class="mb-4">
      <%= f.label t('email'), class: 'block text-gray-700 text-sm font-bold' %><br />
      <%= f.email_field :email, autofocus: true, :required => true, autocomplete: "email", class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    </div>
    <div class="mb-4">
      <%= f.label t('username'), class: 'block text-gray-700 text-sm font-bold' %><br />
      <%= f.text_field :username, autofocus: true, :required => true, autocomplete: "email", class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    </div>
    <div class="mb-4">
      <%= f.label t('full_name'), class: 'block text-gray-700 text-sm font-bold' %><br />
      <%= f.text_field :full_name, autofocus: true, :required => true, autocomplete: "email", class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="mb-4">
      <%= f.label t('password'), class: 'block text-gray-700 text-sm font-bold' %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'  %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> <%=t(:haracters_minimum)%>c</em>
      <% end %>
    </div>
    <div class="mb-4">
      <%= f.label t('password_confirmation'), class: 'block text-gray-700 text-sm font-bold' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'  %>
    </div>
    <div class="mb-4">
      <%= f.label t('current_password'), class: 'block text-gray-700 text-sm font-bold' %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, :required => true, autocomplete: "current-password", class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'  %>
    </div>
    <div class="flex items-baseline justify-between">
      <%= f.submit t("update"), class: 'bg-blue-500 hover:bg-blue-700 text-slate-200 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
    </div>
  <% end %>
  <div class="mb-0 m-auto w-full text-right">
    <div class="flex flex-col p-8 bg-white shadow-md hover:shodow-lg rounded">
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg"
            class="w-16 h-16 rounded p-3 border border-blue-100 text-blue-400 bg-blue-50" fill="none"
            viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <div class="flex flex-col ml-3">
            <div class="font-medium leading-none"><%=t(:delete_your_account?)%></div>
            <p class="text-sm text-gray-600 leading-none mt-1"><%=t('consiquences_of_deleting_account')%>
            </p>
          </div>
        </div>
        <%= button_to t("delete"), registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'flex-no-shrink bg-red-500 px-5 ml-4 py-2 text-sm shadow-sm hover:shadow-lg font-medium tracking-wider border-2 border-red-500 text-slate-200 rounded' %>
      </div>
    </div>
  </div>
  <div class="my-10 m-auto w-full max-w-xs text-center">
    <%= link_to t("back"), :back %>
  </div>
</div>
