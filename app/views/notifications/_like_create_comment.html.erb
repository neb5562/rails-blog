<li>
  <a href="#" class="flex flex-col items-center bg-white shadow-md md:flex-row md:max-w-xl hover:bg-zinc-100 dark:bg-zinc-900 dark:hover:bg-zinc-600">
    <% if notification.from_user.avatar.attached? %>
      <%= image_tag notification.from_user.avatar.variant(:thumb), class: 'mr-2 w-12 h-12 rounded-full'%>
    <% else %>
      <%=image_tag("#{ENV['DEFAULT_AVATAR_IMAGE_PATH']}", :alt => "user photo", class: 'mr-2 w-12 h-12 rounded-full') %>
    <% end %>
    <div class="flex flex-col justify-between p-4 leading-normal">
      <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
      <%=notification.inspect%>
      </p>
    </div>
  </a>
</li>
