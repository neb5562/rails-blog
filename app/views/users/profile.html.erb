  <div class="container mx-auto flex w-full">
  <div class="rounded-3xl shadow-xl my-3 bg-indigo-500 w-full">
    <div class="flex justify-center">
      <% if @user.avatar.attached? %>
        <%= image_tag @user.avatar.variant(:thumb), class: 'rounded-full border-solid border-white border-2 -mt-3'%>
      <% else %>
        <%=image_tag("#{ENV['DEFAULT_AVATAR_IMAGE_PATH']}", :height => '100', :width => '100', :alt => "user photo", class: 'rounded-full shadow-lg') %>
      <% end %>
    </div>
    <div class="text-center px-3 pb-6 pt-2">
      <h3 class="text-slate-200 text-sm bold font-sans"><%=h(@user.full_name)%></h3>
    </div>
    <div class="flex justify-center pb-3 text-slate-200">
      <div class="text-center">
        <h2><%=link_to 'View ' + @user.posts.size.to_s + ' posts', user_posts_path(@user.username)%> </h2>
      </div>
    </div>
  </div>
  </div>