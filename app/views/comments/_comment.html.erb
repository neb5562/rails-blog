        
<div class="w-full dark:text-slate-300 dark:bg-zinc-800 my-2 mx-1 flex gap-3 rounded-lg -md bg-white p-2 text-black shadow-md border dark:border-gray-800">
  <!-- Content -->
  <div class = "w-full p-2">
    <!-- Header -->
    <div class="flex items-center justify-between py-1 pr-2">
      <!-- Author -->
      <div>
        <% if comment.user.avatar.attached? %>
          <%= image_tag comment.user.avatar.variant(:thumb), class: 'float-left w-8 h-8 rounded-lg -full mr-4 mb-2'%>
        <% else %>
          <%=image_tag("#{ENV['DEFAULT_AVATAR_IMAGE_PATH']}", :alt => "user photo", class: 'float-left mr-4 mb-2 w-8 h-8 rounded-lg -full') %>
        <% end %>
        <span class="font-bold text-gray-900 bg-white font-medium rounded-lg  text-sm px-5 py-2.5 text-center inline-flex items-center  dark:bg-zinc-800 dark:border-gray-700 dark:text-white mr-2 mb-2">
          <%=link_to h(comment.user.full_name) + ' ', user_posts_path(comment.user.username), class: "text-blue-400 hover:underline" %>
          <% if comment.user.premium? %>
            <svg data-tooltip-target="tooltip-light" data-tooltip-style="light" xmlns="http://www.w3.org/2000/svg" class="dark:text-orange-400 text-orange-300 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
            </svg>
            <div id="tooltip-light" role="tooltip" class="inline-block absolute invisible z-10 py-2 px-3 text-sm font-medium dark:text-slate-300 text-gray-900 bg-white dark:bg-zinc-800 rounded-lg border border-gray-200 dark:border-gray-500 shadow-sm opacity-0 tooltip">
              <%=t('premium user') %>
              <div class="tooltip-arrow" data-popper-arrow></div>
            </div>
          <% end %>
          <%=render 'layouts/post_date_section', post: comment%>
        </span>
      </div>
      <!-- Rate -->
    </div>
    <div x-data="{ open: false, word: 'Edit' }">
      <% if current_user.present?  && current_user.id == comment.user_id %>
        <button class="float-right -mt-12" x-on:click="open = ! open, word = (word == 'Edit') ? 'Cancel' : 'Edit'" x-text="word">Edit</button>
      <% end %>
      <div x-show="open">
        <%= form_with(url: save_edit_comment_path(comment.post, comment.id), html: { method: :patch}) do |f| %>
          <%= hidden_field_tag 'comment_id', comment.id  %>
          <div class="mb-2">
            <textarea name="body", required = true, class="dark:bg-zinc-700 dark:text-slate-300 dark:placeholder-white placeholder-gray-900 shadow border dark:border-gray-800 rounded-lg  w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline"><%=comment.body%></textarea>
          </div>
          <div class="flex float-right">
            <button role="submit" class="p-2 rounded-lg -md bg-blue-500 text-slate-200 hover:bg-blue-400" required>Save</button>
          </div>
        <% end %>
      </div>
      <div x-show="! open">
        <!-- Context -->
        <div class="p-1" style="line-height: 100%;display: flex;justify-content: left;flex-wrap: wrap;white-space: pre-wrap;">
          <%=render 'layouts/comment_body', {comment: comment}  %>
        </div>
      </div>
    </div>
    <div>
      <% unless current_user.nil?%>
        <div class="float-left mt-2" x-data="{ count: <%=comment.likes.size%>, liked: <%=!comment.likes.select{|item| item.user_id == current_user.id}.empty?%> }">
          <a href="javascript:add_like(<%=!current_user.nil? ? current_user.id : -1 %>,<%=comment.id%>, null)" @click="if (liked) {count -=1; liked = false;} else { count +=1; liked = true;}">
            <svg xmlns="http://www.w3.org/2000/svg" id="comment-heart-<%=comment.id%>" class="dark:text-slate-300 float-left <%='text-blue-500 dark:text-blue-500' if (!current_user.nil? && !comment.likes.select{|item| item.user_id == current_user.id}.empty?)%> float-left mr-1.5 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" />
            </svg>
          </a>
          <button id="dropdownUsersButton" x-text = "count" data-dropdown-toggle="dropdownUsers-<%=comment.id%>" data-dropdown-placement="bottom" class="float-left ml-1 text-gray-500 dark:text-gray-400  font-light" type="button">
            <%="#{comment.likes.size}"%>
          </button>
          <!-- Dropdown menu -->
          <div id="dropdownUsers-<%=comment.id%>" class="hidden z-10 w-60 rounded-lg shadow bg-white dark:bg-zinc-800 block" style="position: absolute; inset: 0px auto auto 0px; margin: 0px; transform: translate(286px, 70px);" data-popper-reference-hidden="" data-popper-escaped="" data-popper-placement="bottom">
            <ul class="overflow-y-auto py-1 h-48 text-gray-700 dark:text-gray-200" aria-labelledby="dropdownUsersButton">
              <% unless comment.likes.size.zero? %>
                <% comment.likes.each do |like|%>
                  <li>
                    <a href="#" class="flex items-center py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">
                      <% if like.user.avatar.attached? %>
                        <%= image_tag like.user.avatar.variant(:thumb), class: 'mr-2 w-6 h-6 rounded-full'%>
                      <% else %>
                        <%=image_tag("#{ENV['DEFAULT_AVATAR_IMAGE_PATH']}", :alt => "user photo", class: 'mr-2 w-6 h-6 rounded-full') %>
                      <% end %>
                      <%=like.user.full_name%>
                    </a>
                  </li>
                <% end %>
              <% else %>
                <li>
                  No likes
                </li>
              <% end %>
            </ul>
          </div>
        </div>
        <div class="mt-4 w-full text-right" x-data="{ open_reply: false, word: 'Reply' }">
          <button class="" x-on:click="open_reply = ! open_reply, word = (word == 'Reply') ? 'Cancel' : 'Reply'" x-text="word">Reply</button>
          <div x-show="open_reply">
            <%= form_with(url: save_new_comment_path, html: { method: :put, class: "dark:bg-zinc-800 w-full bg-white rounded-lg pt-2"}) do |f| %>
              <%= hidden_field_tag 'parent_id', comment.id  %>
              <%= hidden_field_tag 'comment_id', comment.id  %>
              <div class="w-full md:w-full mb-2 mt-2">
                <textarea name="body", required = true, class="dark:bg-zinc-700 dark:text-slate-300 dark:placeholder-white placeholder-gray-900 shadow border dark:border-gray-800 rounded-lg  w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline"></textarea>
              </div>
              <div class="flex float-right">
                <button role="submit" class="p-2 rounded-lg -md bg-blue-500 text-slate-200 hover:bg-blue-400" required>Save</button>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <%= render comment.replies %>
  </div>
</div>
