<div class="mt-3 px-5 py-4 bg-white dark:bg-zinc-800 shadow rounded-lg  w-full">
  <div class="flex mb-4">
    <% if post.user.avatar.attached? %>
      <%= image_tag post.user.avatar.variant(:thumb), class: 'w-12 h-12 rounded-lg -full'%>
    <% else %>
      <%=image_tag("#{ENV['DEFAULT_AVATAR_IMAGE_PATH']}", :alt => "user photo", class: 'w-12 h-12 rounded-lg -full') %>
    <% end %>
    <div class="ml-2 mt-0.5 w-full">
      <span class="font-bold text-gray-900 bg-white font-medium rounded-lg  text-sm px-5 py-2.5 text-center inline-flex items-center  dark:bg-zinc-800 dark:border-gray-700 dark:text-white mr-2 mb-2">
        <%=link_to h(post.user.full_name), user_posts_path(post.user.username), class: "text-blue-400 hover:underline" %>&nbsp;
        <% if post.user.premium? %>
          <svg data-tooltip-target="tooltip-light" data-tooltip-style="light" xmlns="http://www.w3.org/2000/svg" class="dark:text-orange-400 text-orange-300 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
          </svg>
          <div id="tooltip-light" role="tooltip" class="inline-block absolute invisible z-10 py-2 px-3 text-sm font-medium dark:text-slate-300 text-gray-900 bg-white dark:bg-zinc-800 rounded-lg border border-gray-200 dark:border-gray-500 shadow-sm opacity-0 tooltip">
            <%=t(:premium_user)%>
            <div class="tooltip-arrow" data-popper-arrow></div>
          </div>
        <% end %>
        <%=link_to show_post_path(post.user.username, post.hashid) do%>
          <%=render 'layouts/post_date_section', post: post%>
        <% end %>
      </span>
    </div>
  </div>
  <p class="text-gray-800 dark:text-gray-100 leading-snug md:leading-normal">
    <div x-data="{ open: false, word: 'Edit' }">
      <% if current_user.present?  && current_user.id == post.user_id %>
        <button class="dark:text-slate-300 float-right" x-on:click="open = ! open, word = (word == 'Edit') ? 'Cancel' : 'Edit'" x-text="word"><%=t(:edit)%></button>
      <% end %>
      <div x-show="open">
        <%= form_with(url: save_edit_post_path(post.hashid), html: { method: :patch}) do |f| %>
          <%= hidden_field 'id', post.hashid  %>
          <div class="mb-2">
            <textarea name="text", required = true, class="dark:bg-zinc-700 dark:text-slate-300 dark:placeholder-white placeholder-gray-900 shadow border dark:border-gray-800 rounded-lg  w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline"><%=post.text%></textarea>
          </div>
          <div class="flex float-right">
            <button role="submit" class="p-2 rounded-lg -md bg-blue-500 text-slate-200 hover:bg-blue-400" required><%=t(:save)%></button>
          </div>
          <br>
        <% end %>
      </div>
      <div x-show="! open">
        <%= render 'layouts/post_text', post: post %>
      </div>
    </div>
    <!-- component -->
  </p>
  <div class="flex items-center justify-between text-slate-500 mt-4">
    <div class="flex space-x-4 md:space-x-8">
      <%=link_to show_post_path(post.user.username, post.hashid) do%>
        <div class="flex cursor-pointer items-center transition hover:text-slate-600">
          <svg xmlns="http://www.w3.org/2000/svg" class="dark:text-slate-300 mr-1.5 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
          </svg>
          <span id = "post-count-<%=post.id%>" x-text = "count" class="dark:text-slate-300"><%=post.comments.size%></span>
        </div>
      <% end %>
      <% unless current_user.nil?%>
        <div class="flex cursor-pointer items-center transition hover:text-slate-600" x-data="{ count: <%=post.likes.size%>, liked: <%=!post.likes.select{|item| item.user_id == current_user.id}.empty?%> }">
          <a href="javascript:add_like(<%=!current_user.nil? ? current_user.id : -1 %>,null,<%=post.id%>)" @click="if (liked) {count -=1; liked = false;} else { count +=1; liked = true;}">
            <svg xmlns="http://www.w3.org/2000/svg" id="post-heart-<%=post.id%>" class="dark:text-slate-300 float-left <%='text-blue-500 dark:text-blue-500' if (!current_user.nil? && !post.likes.select{|item| item.user_id == current_user.id}.empty?)%> mr-1.5 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" />
            </svg>
          </a>
          <button id="dropdownUsersButton" x-text = "count" data-dropdown-toggle="dropdownUsers-<%=post.id%>" data-dropdown-placement="bottom" class="font-mediumtext-sm dark:text-slate-300 text-slate-500" type="button">
            <%="#{post.likes.size}"%>
          </button>
          <!-- Dropdown menu -->
          <div id="dropdownUsers-<%=post.id%>" class="hidden z-10 w-60 rounded-lg shadow bg-white dark:bg-zinc-800 block" style="position: absolute; inset: 0px auto auto 0px; margin: 0px; transform: translate(286px, 70px);" data-popper-reference-hidden="" data-popper-escaped="" data-popper-placement="bottom">
            <ul class="overflow-y-auto py-1 h-48 text-gray-700 dark:text-gray-200" aria-labelledby="dropdownUsersButton">
              <% unless post.likes.size.zero? %>
                <% post.likes.each do |like|%>
                  <li>
                    <a href="#" class="flex items-center py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">
                      <% if like.user.avatar.attached? %>
                        <%= image_tag like.user.avatar.variant(:thumb), class: 'mr-2 w-6 h-6 rounded-full'%>
                      <% else %>
                        <%=image_tag("#{ENV['DEFAULT_AVATAR_IMAGE_PATH']}", :alt => "user photo", class: 'mr-2 w-6 h-6 rounded-full') %>
                      <% end %>
                      <%=like.user.full_name%>
                    </a>
                  </li>
                <% end %>
              <% else %>
                <li>
                  No likes
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
