<% content_for(:html_title) { @post.text[0,12] } %>
<div class="container mx-auto flex flex-wrap py-6">
  <!-- Post Section -->
  <section class="w-full flex flex-col items-center px-3 mx-auto">
    <article class="flex flex-col shadow my-4" style="min-width:100%!important;">
      <!-- Article Image -->
      <div class="dark:bg-gray-800 bg-white flex flex-col justify-start p-6">
        <div class="flex mb-4">
          <% if @post.user.avatar.attached? %>
            <%= image_tag @post.user.avatar.variant(:thumb), class: 'w-12 h-12 rounded-full'%>
          <% else %>
            <%=image_tag("#{ENV['DEFAULT_AVATAR_IMAGE_PATH']}", :alt => "user photo", class: 'w-12 h-12 rounded-full') %>
          <% end %>
          <div class="ml-2 mt-0.5">
            <span class="font-bold text-gray-900 bg-white font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center  dark:bg-gray-800 dark:border-gray-700 dark:text-white mr-2 mb-2">
              <%=link_to user_posts_path('@' + @post.user.username), class: "text-blue-400 hover:underline" do%>
                <%=h(@post.user.full_name) %>&nbsp;
              <% end %>
              <% if @post.user.premium? %>
                <svg data-tooltip-target="tooltip-light" data-tooltip-style="light" xmlns="http://www.w3.org/2000/svg" class="dark:text-orange-400 text-orange-300 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                </svg>
                <div id="tooltip-light" role="tooltip" class="inline-block absolute invisible z-10 py-2 px-3 text-sm font-medium dark:text-slate-200 text-gray-900 bg-white dark:bg-gray-800 rounded border border-gray-200 dark:border-gray-500 shadow-sm opacity-0 tooltip">
                  Premium User
                  <div class="tooltip-arrow" data-popper-arrow></div>
                </div>
              <% end %>
              <%=render 'layouts/post_date_section', post: @post%>
            </span>
          </div>
        </div>
        <hr class="pb-4">
        <% if current_user.present?  && current_user.id == @post.user_id %>
          <div x-data="{ open: false, word: 'Edit' }">
            <button class="dark:text-slate-200 float-right" x-on:click="open = ! open, word = (word == 'Edit') ? 'Cancel' : 'Edit'" x-text="word">Edit</button>
            <div x-show="open">
              <%= form_with(url: save_edit_post_path, html: { method: :patch}) do |f| %>
                <div class="mb-2">
                  <textarea name="text", required = true, class="dark:bg-gray-600 dark:text-slate-200 dark:placeholder-white bg-gray-100 rounded border border-gray-400 leading-normal resize-none w-full py-2 px-3 font-medium placeholder-gray-700 focus:outline-none focus:bg-white"><%=@post.text%></textarea>
                </div>
                <div class="flex float-right">
                  <button role="submit" class="p-2 rounded-md bg-blue-500 text-slate-200 hover:bg-blue-400" required>Save</button>
                </div>
              <% end %>
            </div>
            <div x-show="! open">
              <%= render 'layouts/post_text', post: @post %>
            </div>
          </div>
        <% end %>
        <!-- component -->
        <% unless current_user.nil?%>
          <div class="float-right mt-4" x-data="{ count: <%=@post.likes.size%>, liked: <%=!@post.likes.select{|item| item.user_id == current_user.id}.empty?%> }">
            <a href="javascript:add_like(<%=!current_user.nil? ? current_user.id : -1 %>,null,<%=@post.id%>)" @click="if (liked) {count -=1; liked = false;} else { count +=1; liked = true;}">
              <svg xmlns="http://www.w3.org/2000/svg" id="post-heart-<%=@post.id%>" class="dark:text-slate-200 float-left <%='text-blue-500 dark:text-blue-500' if (!current_user.nil? && !@post.likes.select{|item| item.user_id == current_user.id}.empty?)%> float-left mr-1.5 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" />
              </svg>
              <span id = "post-count-<%=@post.id%>" x-text = "count" class="float-left ml-1 text-gray-500 dark:text-gray-400  font-light"><%="#{@post.likes.size}"%></span>
            </a>
          </div>
        <% end %>
      </div>
    </article>
    <div class="w-full flex mx-auto items-center justify-center shadow-lg mx-8 mb-4">
      <%= form_with(url: save_new_comment_path, html: { method: :put, class: "dark:bg-gray-800 w-full bg-white rounded-lg px-4 pt-2" }) do |f| %>
        <% if @comment.errors.full_messages.any? %>
          <div class="p-4 text-sm text-red-700 bg-red-100 rounded-lg dark:bg-red-200 dark:text-red-800" role="alert">
            <% @comment.errors.full_messages.each do |error_message| %>
              <%=error_message %><br>
            <% end %>
          </div>
        <% end %>
        <%= hidden_field_tag 'authenticity_token', form_authenticity_token %>
        <div class="flex flex-wrap -mx-3 mb-6">
          <div class="w-full md:w-full px-3 mb-2 mt-2">
            <textarea class="dark:bg-gray-600 dark:text-slate-200 dark:placeholder-white bg-gray-100 rounded border border-gray-400 leading-normal resize-y w-full py-2 px-3 font-medium placeholder-gray-700 focus:outline-none focus:bg-white" name="body" placeholder='Type Your Comment' required></textarea>
          </div>
          <div class="w-full md:w-full items-start md:w-full px-3 text-right">
            <div class="-mr-1">
              <input type='submit' class="rounded-lg p-2 bg-blue-500 text-slate-200 hover:bg-blue-400" value='Post Comment'>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <!-- component -->
    <% unless @post.comments.empty? %>
      <% @post.comments.each do |comment| %>
        <div class="w-full my-2 mx-1 flex gap-3 rounded-md bg-white p-2 text-black shadow">
          <!-- Content -->
          <div class = "w-full p-2">
            <!-- Header -->
            <div class="flex items-center justify-between py-1 pr-2">
              <!-- Author -->
              <div>
                <% if comment.user.avatar.attached? %>
                  <%= image_tag comment.user.avatar.variant(:thumb), class: 'float-left w-8 h-8 rounded-full mr-4 mb-2'%>
                <% else %>
                  <%=image_tag("#{ENV['DEFAULT_AVATAR_IMAGE_PATH']}", :alt => "user photo", class: 'float-left mr-4 mb-2 w-8 h-8 rounded-full') %>
                <% end %>
                <span class="font-bold text-gray-900 bg-white font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center  dark:bg-gray-800 dark:border-gray-700 dark:text-white mr-2 mb-2">
                  <%=link_to h(comment.user.username), user_posts_path('@' + comment.user.username), class: "text-blue-400 hover:underline" %>
                  <% if comment.user.premium? %>
                    <svg data-tooltip-target="tooltip-light" data-tooltip-style="light" xmlns="http://www.w3.org/2000/svg" class="dark:text-orange-400 text-orange-300 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                    </svg>
                    <div id="tooltip-light" role="tooltip" class="inline-block absolute invisible z-10 py-2 px-3 text-sm font-medium dark:text-slate-200 text-gray-900 bg-white dark:bg-gray-800 rounded border border-gray-200 dark:border-gray-500 shadow-sm opacity-0 tooltip">
                      Premium User
                      <div class="tooltip-arrow" data-popper-arrow></div>
                    </div>
                  <% end %>
                  <%=render 'layouts/post_date_section', post: comment%>
                </span>
              </div>
              <!-- Rate -->
            </div>
            <% if current_user.present?  && current_user.id == comment.user_id %>
              <div x-data="{ open: false, word: 'Edit' }">
                <button class="float-right" x-on:click="open = ! open, word = (word == 'Edit') ? 'Cancel' : 'Edit'" x-text="word">Edit</button>
                <br>
                <div x-show="open">
                  <%= form_with(url: save_edit_comment_path(comment.post, comment.id), html: { method: :patch}) do |f| %>
                    <%= hidden_field_tag 'comment_id', comment.id  %>
                    <div class="mb-2">
                      <textarea name="body", required = true, class="dark:bg-gray-600 dark:text-slate-200 dark:placeholder-white bg-gray-100 rounded border border-gray-400 leading-normal resize-y w-full py-2 px-3 font-medium placeholder-gray-700 focus:outline-none focus:bg-white"><%=comment.body%></textarea>
                    </div>
                    <div class="flex float-right">
                      <button role="submit" class="p-2 rounded-md bg-blue-500 text-slate-200 hover:bg-blue-400" required>Save</button>
                    </div>
                  <% end %>
                </div>
                <div x-show="! open">
                  <!-- Context -->
                  <div class="p-1" style="line-height: 100%;display: flex;justify-content: left;flex-wrap: wrap;white-space: pre-wrap;">
                    <%=render 'layouts/comment_body', {comment: comment}  %>
                  </div>
                </div>
              </div>
            <% end %>
            <div>
              <% unless current_user.nil?%>
                <div class="float-left mt-4" x-data="{ count: <%=comment.likes.size%>, liked: <%=!comment.likes.select{|item| item.user_id == current_user.id}.empty?%> }">
                  <a href="javascript:add_like(<%=!current_user.nil? ? current_user.id : -1 %>,<%=comment.id%>, null)" @click="if (liked) {count -=1; liked = false;} else { count +=1; liked = true;}">
                    <svg xmlns="http://www.w3.org/2000/svg" id="comment-heart-<%=comment.id%>" class="dark:text-slate-200 float-left <%='text-blue-500 dark:text-blue-500' if (!current_user.nil? && !comment.likes.select{|item| item.user_id == current_user.id}.empty?)%> float-left mr-1.5 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" />
                    </svg>
                    <span id = "comment-count-<%=comment.id%>" x-text = "count" class="float-left ml-1 text-gray-500 dark:text-gray-400  font-light"><%="#{comment.likes.size}"%></span>
                  </a>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end%>
    <% end %>
  </section>
</div>
